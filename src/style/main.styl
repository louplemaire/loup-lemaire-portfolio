//////////////////////// CONFIG ////////////////////////
// Import fonts
@import url('https://fonts.googleapis.com/css?family=Playfair+Display&display=swap')
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700&display=swa')

// Fonts
$font-title = 'Playfair Display', cursive
$font-text = 'Source Sans Pro', sans-serif
$font-size-title = 2.5rem
$font-size-subtitle = 1.25rem
$font-size-text = 1rem

// Colors
$color-black = #0E0E0E
$color-white = #FAF8F8

.black-color
    color $color-black

.white-color
    color $color-white

// Reset
*
    margin 0
    padding 0

// Sections
section
    width 100vw
    height 100vh

// display-flex-row
.display-flex-row
    display flex
    flex-direction row

//////////////////////// HOME ////////////////////////
// Section
.home
    position relative
    color $color-white
    background $color-black
    // Title
    .home-title
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        font-family $font-title
        font-size 5rem
        letter-spacing 0.5rem
    // Scroll arrow
    .look-work-arrow
        position absolute
        bottom 80px
        left 50%
        width 24px
        height 24px
        fill $color-white
        transform translate(-50%) rotate(90deg)
        cursor pointer
        &:hover
            opacity 0.6
            transition 0.3s
            transition-timing-function ease-in-out

//////////////////////// WORK ////////////////////////
// Section
.work
    background-color $color-black
    // Header
    .header
        padding 30px 100px 0px 100px
        display flex
        flex-direction row
        justify-content space-between
        align-items baseline 
        .logo
            text-transform none
            text-decoration none
            svg
                fill $color-white
        .about
            font-family $font-title
            font-size $font-size-subtitle
            cursor pointer
            &:hover
                opacity 0.6
                transition 0.3s
                transition-timing-function ease-in-out
    // Savoir project
    .project
        margin 50px 100px 0px 100px
        .project-title
            margin-bottom 40px
            font-family $font-title
            font-size $font-size-title
        .project-image
            width 49vw
            img
                width: 100%
                height auto
        .project-info
            margin 80px 0px 0px 60px
            .project-date, .project-tools, .project-team
                margin-bottom 30px
                .date-subtitle, .tools-subtitle, .team-subtitle
                    font-family $font-title
                    font-size $font-size-subtitle
                .date-info, .tools-info, .team-info
                    margin-left 5px
                    font-family $font-text
                    font-size $font-size-text
                    line-height 24px
                    opacity 0.65
        .project-description
            width 49vw
            margin-top 50px
            font-family $font-text
            font-size $font-size-text
            line-height 24px
